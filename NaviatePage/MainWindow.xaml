    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0">
                <TabControl
                Background="Transparent"
                SelectedItem="3"
                Style="{StaticResource MaterialDesignFilledTabControl}"
                TabStripPlacement="Left">

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding TabSelectionChangedCommand}" CommandParameter="{Binding SelectedItem.Header, RelativeSource={RelativeSource AncestorType=TabControl}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>

                    <TabItem Header="Home">
                    </TabItem>

                    <TabItem Header="Customer">
                    </TabItem>

                    <TabItem Header="Order">
                    </TabItem>

                    <TabItem Header="Transaction">
                    </TabItem>

                    <TabItem Header="Shipment">
                    </TabItem>

                    <TabItem Header="Setting">
                    </TabItem>

                    <TabItem Header="Product">
                    </TabItem>
                </TabControl>
            </materialDesign:Card>

            <Grid Grid.Column="1">
                <ContentControl Content="{Binding CurrentViewModel, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Grid>

        <Grid Grid.Row="0" Width="{Binding ElementName=mainwindow, Path=Width}" Background="#212529">
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <!--  Button Thu nhỏ  -->
                <Button
                    x:Name="MinimizeApp"
                    Height="40"
                    Margin="0,0,10,0"
                    Command="{Binding MiniMizeWindowCommand}"
                    Content="Thu nhỏ" />

                <!--  Button Phóng to  -->
                <Button
                    x:Name="MaximizeApp"
                    Height="40"
                    Margin="0,0,10,0"
                    Command="{Binding MaximizedWindowCommand}"
                    Content="Phóng to" />

                <!--  Button Đóng cửa sổ  -->
                <Button
                    x:Name="CloseApp"
                    Width="40"
                    Height="40"
                    Command="{Binding CloseWindowCommand}"
                    Cursor="Hand"
                    Style="{StaticResource ExitApp}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>