<UserControl
    x:Class="NaviatePage.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NaviatePage.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NaviatePage.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="White">
        <materialDesign:DialogHost
            VerticalAlignment="Stretch"
            CloseOnClickAway="False"
            DialogContent="{Binding Sample4Content}"
            DialogTheme="Inherit"
            IsOpen="{Binding IsSample4DialogOpen}"
            OverlayBackground="{DynamicResource PrimaryHueDarkBrush}"
            Placement="Mouse">
            <Border
                MinWidth="256"
                MinHeight="256"
                BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                BorderThickness="1"
                ClipToBounds="True">
                <Button
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Command="{Binding OpenSample4DialogCommand}"
                    Content="RUN" />
            </Border>
        </materialDesign:DialogHost>
    </Grid>
</UserControl>